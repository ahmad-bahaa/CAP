<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.ninjageeksco.samples.cap.DriverLoginActivity">
    <TextView
        android:id="@+id/driv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="185dp"
        android:text="Driver Login"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/driv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/driv_text"
        android:layout_marginTop="31dp"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/driv_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/driv_email"
        android:layout_marginTop="14dp"
        android:drawableLeft="@drawable/ic_screen_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/driv_login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/driv_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:text="Login"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/driv_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/driv_login"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_red_dark"
        android:text="Register"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
